<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/tienne"
        android:gravity="center_horizontal|start"
        android:text="Hoşgeldiniz" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="@color/cardview_shadow_start_color" />

    <TextView
        android:id="@+id/notificationDetail"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/actor"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="16sp"
        android:text="Zula Kasa Simülatör'e hoşgeldiniz. Geliştirmesini GuruAjans'ın yaptığı Zula Kasa Simülatörün, Zula hesabınızla bir ilişkisi bulunmamaktadır. Lütfen kayıt olurken zuladan bağımsız bilgilerle kayıt olunuz.\n\nİyi eğlenceler.. Teşekkürler \n\nGuruAjans" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="@color/cardview_shadow_start_color" />

    <CheckBox
        android:id="@+id/tekrarGosterme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_marginTop="5dp"
        android:buttonTint="#26a69a"
        style="@style/ThemeOverlay.App.CheckBox"
        android:textColor="@color/browser_actions_text_color"
        android:text="Tekrar Gösterme"/>

</LinearLayout>