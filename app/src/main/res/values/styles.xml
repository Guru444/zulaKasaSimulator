<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2E3436</item>
        <item name="colorPrimaryDark">#2E3436</item>
        <item name="colorAccent">#2E3436</item>
    </style>
    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">#400000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@android:drawable/editbox_background_normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">#26a69a</item>
        <item name="colorSecondary">#26a69a</item>
    </style>


</resources>
